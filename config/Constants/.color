##
# Bash Colors and Formatting
#
# Usage:
#
#   $ source /home/niko/include/.local/env/.colors
#   $ echo -e "${yellow}hello, i'm yellow.${reset}"
#
# Reference:
#
#   - Bash tips: Colors and formatting <http://misc.flogisoft.com/bash/tip_colors_and_formatting>
##
 
# reset all attributes
export reset="\\e[0m"                        # no color
 
# format text
export bold="\\e[1m"                         # bold
export dim="\\e[2m"                          # dim
export italic="\\e[3m"                       # italic
export underline="\\e[4m"                    # underlined
export blink="\\e[5m"                        # blink
export invert="\\e[7m"                       # invert fg and bg
export hide="\\e[8m"                         # hide

